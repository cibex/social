<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mail_quoted_reply_composer_view_form" model="ir.ui.view">
        <field name="model">mail.compose.message</field>
        <field name="inherit_id" ref="mail.email_compose_message_wizard_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='body']" position="after">
                <field name="is_separate_body" invisible="1"/>
                <field name="reply_body" attrs="{'readonly': [('is_reply_readonly', '=', True)], 'invisible': [('is_separate_body', '=', False)]}" force_save="1"/>
                <label for="is_reply_readonly" attrs="{'invisible': [('is_separate_body', '=', False)]}"/>
                <field name="is_reply_readonly" widget="boolean_toggle" attrs="{'invisible': [('is_separate_body', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
